<div class="restaurant-card" id="restaurant-{{this.id}}">

	<div class="restaurant-card__image-container">
		<img alt="card-img" src={{this.image}} />
	</div>

	<div class="restaurant-card__content">
		<div class="restaurant-card__title"> {{this.title}}</div>

		{{#if this.subtitle}}
			<span class="restaurant-card__subtitle">{{this.subtitle}}</span>
		{{/if}}

        {{#if this.categories}}
            <span class="restaurant-card__categories">{{this.categories}}</span>
        {{/if}}
	</div>

</div>

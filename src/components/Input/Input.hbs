<div class="input" id="{{this.id}}-container">

	{{#if textarea}}
		<textarea id={{this.id}} type={{this.type}} placeholder="{{this.placeholder}}" value="{{this.value}}"></textarea>
	{{else}}

		{{#if this.button}}
			<div class="input__search-button"></div>
		{{else if this.isPassword}}
			<button class="input__btn-eye hidden" type="button">
				<img class="input__eye-open" src="assets/eye-open.svg" alt="eye-open" />
				<img class="input__eye-close" src="assets/eye-close.svg" alt="eye-close" />
			</button>
		{{/if}}

		{{#if this.dynamic}}
			<input
				id={{this.id}}
				type={{this.type}}
				placeholder=" "
				class="dynamic"
				value="{{this.value}}"
				{{this.attribute}}
			/>
			<span class="input__label">{{this.placeholder}}</span>
			<span class="input__label-holder"></span>
		{{else}}
			<input id={{this.id}} type={{this.type}} placeholder="{{this.placeholder}}" value="{{this.value}}" />
		{{/if}}

	{{/if}}

</div>
